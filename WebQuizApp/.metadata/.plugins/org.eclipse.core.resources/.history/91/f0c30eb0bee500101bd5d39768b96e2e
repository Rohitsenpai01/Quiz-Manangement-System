package com.app.daos;

import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.ArrayList;
import java.util.List;

import com.app.pojos.Question;

public class QuestionDaoImp extends Dao implements QuestionDao{
	private PreparedStatement stmtSaveAnswer;
	private PreparedStatement stmtGetAll;
	private PreparedStatement stmtFindById;
	
	public QuestionDaoImp() throws Exception {
		stmtGetAll = con.prepareStatement("SELECT question_id, quiz_id, question_text, option_a, option_b, option_c, option_d FROM questions");
		stmtFindById = con.prepareStatement();
		stmtSaveAnswer = con.prepareStatement();
	}

	public void close() throws Exception {
		stmtGetAll.close();
		stmtFindById.close();
		stmtSaveAnswer.close();
	}
	
	@Override
	public List<Question> getAll() throws Exception {
		List<Question> list = new ArrayList<>();
		try(ResultSet rs = stmtGetAll.executeQuery()) {
			while(rs.next()) {
				int id = rs.getInt("id");
				int quiz_id = rs.getInt("quiz_id");
				String text = rs.getString("text");
				String a = rs.getString("a");
				String b = rs.getString("b");
				String c = rs.getString("c");
				String d = rs.getString("d");
				String cor = rs.getString("correct");
				char correct = cor.charAt(0);
				Question que = new Question(id, quiz_id, text, a, b, c, d, correct);
				list.add(que);
			}
		}
		return list;
	}

	@Override
	public Question findById(int Quiz) throws Exception {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public int saveAnswer(Question que) throws Exception {
		// TODO Auto-generated method stub
		return 0;
	}
	
}
