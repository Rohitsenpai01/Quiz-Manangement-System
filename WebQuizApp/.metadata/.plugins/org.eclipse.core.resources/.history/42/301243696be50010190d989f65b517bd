package com.app.daos;

import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.ArrayList;
import java.util.List;

import com.app.pojos.Question;

public class QuestionDaoImp extends Dao implements QuestionDao {
	private PreparedStatement stmtFindAll;
	private PreparedStatement stmtFindById;
	private PreparedStatement stmtSave;
	
	public QuestionDaoImp() throws Exception {
		stmtFindAll = con.prepareStatement("SELECT question_id, quiz_id, question_text, option_a, option_b, option_c, option_d FROM questions");
		stmtFindById = con.prepareStatement("SELECT question_text, option_a, option_b, option_c, option_d, correct_option FROM questions WHERE quiz_id = ?");
		stmtSave = con.prepareStatement("INSERT INTO questions " + "(quiz_id, question_text, option_a, option_b, option_c, option_d, correct_option)" + "VALUES (?, ?, ?, ?, ?, ?, ?)");
	}
	
	public void close() throws Exception {
		stmtFindAll.close();
		stmtFindById.close();
		stmtSave.close();
	}
	
	@Override
	public List<Question> findAll() throws Exception {
		List<Question> list = new ArrayList<>();
		try(ResultSet rs = stmtFindAll.executeQuery()) {
			while(rs.next()) {
				int question_id = rs.getInt("id");
				int quiz_id = rs.getInt("quiz_id");
				String text = rs.getString("text");
				String a = rs.getString("a");
				String b = rs.getString("b");
				String c = rs.getString("c");
				String d = rs.getString("d");
				String cor = rs.getString("correct");
				char correct = String.valueOf(cor);
				Question que = new Question(question_id, quiz_id, text, a, b, c, d, 0);
			}
		}
		return list;
	}

	@Override
	public Question findById(int id) throws Exception {
		// TODO Auto-generated method stub
		return null;
	}


	@Override
	public int save(Question que) throws Exception {
		// TODO Auto-generated method stub
		return 0;
	}
	
	
}
